<p id="notice"><%= notice %></p>
<div class="container" style="width:60%">
  <div class="row">
    <div class="col-lg-12">
    <div class = "form-style-10" >
<h1>Listing Appointments</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Date</th>
      <th>Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.name %></td>
        <td><%= appointment.email %></td>
        <td><%= appointment.time.strftime("%d %b %y") %></td>
       <td><%= appointment.time.strftime("%H:%M") %></td>
        <td><%= link_to 'Show', appointment %></td>
        <% if current_user.admin? %>
        <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
        <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
         <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Appointment', new_appointment_path %>
</div></div></div></div>

 <div class="form-style-10">
   <h1>Monthly Calendar</h1>
   <%= month_calendar(events: @appointments) do |date, appointments| %>
   <%= date %>
    <br>
   <%if appointments.size > 0 %>
   <%= link_to "<strong>#{appointments.size} appointments</strong>".html_safe, '#' %>
   <% end %>
   <% end %>
 </div>

