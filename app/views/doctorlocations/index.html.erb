<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="col-lg-12">
    <div class = "form-style-10">
<%= form_tag doctorlocations_path, :method => :get do %>
  <p>
    <%= text_field_tag :search, params[:search], placeholder: "Search By Address"%>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>
</div></div></div></div>

<div class="container">
  <div class="row">
    <div class="col-lg-12">
    <div class = "form-style-10">

<h1>Listing Doctor locations</h1>

<table>
  <thead>
    <tr>
      <th>Doctorname</th>
      <th>Address</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doctorlocations.each do |doctorlocation| %>
      <tr>
        <td><%= doctorlocation.doctorname %></td>
        <td><%= doctorlocation.address %></td>
        <td><%= doctorlocation.latitude %></td>
        <td><%= doctorlocation.longitude %></td>
        <td><%= link_to 'Show', doctorlocation %></td>
        <% if current_user.admin? %>
        <td><%= link_to 'Edit', edit_doctorlocation_path(doctorlocation) %></td>
        <td><%= link_to 'Destroy', doctorlocation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.admin? %>
<%= link_to 'New Doctorlocation', new_doctorlocation_path %>
<% end %>
</div></div></div></div>
