<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="col-lg-12">
    <div class = "form-style-10">
<h1>Listing Posts in <%= @ask_doctor.title %></h1>

<table>
  <thead>
    <tr>
      <th>Post message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.post_message %></td>
       
        <td><%= link_to 'Show', ask_doctor_post_path(@ask_doctor, post) %></td>
        <td><%= link_to 'Edit', edit_ask_doctor_post_path(@ask_doctor, post) %></td>
        <td><%= link_to 'Destroy', ask_doctor_post_path(@ask_doctor, post), :confirm => 'Are you sure ?', :method => :delete %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_ask_doctor_post_path(@ask_doctor) %>
<%= link_to 'Back to Ask Doctor', @ask_doctor %>
</div></div></div></div>